mixin videoPlayer(video={})
    .videoPlayer#js-videoPlayer
        video(src=video.src)
        .videoPlayer__controls
            .videoPlayer__columns
                input.videoPlayer__volume#js-volume(type="range", min="0", max="1", step="0.1" value="0.5")
                span#js-volumeButton
                    i.fas.fa-volume-up
                span
                    span#currentTime 00:00:00
                    span  / 
                    span#totalTime 00:10:00
            .videoPlayer__columns
                span#js-playButton
                    i.fas.fa-play
            .videoPlayer__columns
                span#js-fullScrButton
                    i.fas.fa-expand