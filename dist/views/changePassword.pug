extends layouts/main

block content
    .form-container
        form(action=`/users${routes.changePassword}`, method="post")
            input(type="password", placeholder="Current Password", name="oldPassword", require=true)
            input(type="password", placeholder="New Password", name="newPassword", require=true)
            input(type="password", placeholder="Verify New Password", name="newPassword1", require=true)
            input(type="submit", value="Change Password")
            