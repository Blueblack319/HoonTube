extends layouts/main

block content
    .form-container
        form(action=routes.editVideo(video.id), method="post")
            input(type="text", placeholder="Title", name="title", require=true, value=video.title)
            textarea(name="description", placeholder="Description", require=true)=video.description
            input(type="submit", value="Edit Video")
        a.form-container__link(href=routes.deleteVideo(video.id)) 
            button Delete Video